generator client {
  provider        = "prisma-client-js"
  output          = "../generated"
  previewFeatures = ["postgresqlExtensions", "relationJoins"]
  binaryTargets   = ["native", "linux-musl-openssl-3.0.x"]
  engineType      = "library"
  relationMode    = "prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              String         @id @default(uuid()) @db.Uuid
  fullname        String         @db.VarChar(50)
  email           String         @unique @db.VarChar(255)
  phone           String?        @unique @db.VarChar(20)
  web3Wallet      String?        @unique @db.VarChar(255)
  passwordEnabled Boolean        @default(false) @map("password_enabled")
  hashedPassword  String?        @map("hashed_password") @db.VarChar(255)
  avatarUrl       String?        @map("avatar_url") @db.VarChar(500)
  address         String?        @db.VarChar(500)
  city            String?        @db.VarChar(50)
  state           String?        @db.VarChar(50)
  zipCode         String?        @db.VarChar(10)
  biography       String?        @db.Text()
  roles           UserRole[]
  flags           UserFlag[]
  createdAt       DateTime       @default(now()) @map("created_at") @db.Timestamptz
  updatedAt       DateTime       @updatedAt @map("updated_at") @db.Timestamptz
  credit          Int            @default(0) @db.Integer
  visible         UserVisibility @default(PUBLIC)
  isBanned        Boolean        @default(false) @map("is_banned")
  isLocked        Boolean        @default(false) @map("is_locked")
  isVerified      Boolean        @default(false) @map("is_verified")
  lastActiveAt    DateTime?      @map("last_active_at") @db.Timestamptz

  security         UserSecurity?
  setting          Setting?
  externalAccounts ExternalAccount[]
  auth             Authentication[]
  loginSessions    LoginSession[]
  products         Product[]
  cart             CartItem[]
  ticketAuthor     Ticket[]          @relation("TicketAuthor")
  ticketAssign     Ticket[]          @relation("TicketAssign")
  ticketMembers    TicketMember[]
  reviews          Review[]
  bills            Bill[]
  orders           Order[]

  @@map("user")
}

model UserSecurity {
  userId                        String    @id @db.Uuid
  mfaEnabled                    Boolean   @default(false) @map("mfa_enabled")
  mfaEnabledAt                  DateTime? @map("mfa_enabled_at") @db.Timestamptz
  mfaDisabledAt                 DateTime? @map("mfa_disabled_at") @db.Timestamptz
  totpEnabled                   Boolean   @default(false) @map("totp_enabled")
  totpEnabledAt                 DateTime? @map("totp_enabled_at") @db.Timestamptz
  totpDisabledAt                DateTime? @map("totp_disabled_at") @db.Timestamptz
  backupCodesEnabled            Boolean   @default(false) @map("backup_codes_enabled")
  backupCodesEnabledAt          DateTime? @map("backup_codes_enabled_at") @db.Timestamptz
  backupCodesDisabledAt         DateTime? @map("backup_codes_disabled_at") @db.Timestamptz
  verificationAttemptsRemaining Int       @default(0) @db.Integer
  verificationAttemptsResetAt   DateTime? @map("verification_attempts_reset_at") @db.Timestamptz
  updatedAt                     DateTime  @updatedAt @map("updated_at") @db.Timestamptz

  mfaSetups   MfaSetup[]
  backupCodes MfaBackupCode[]
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("user_security")
}

model ExternalAccount {
  id             String           @id @default(uuid()) @db.Uuid
  provider       ProviderPlatform @map("provider")
  providerUserId String           @map("provider_user_id") @db.VarChar(255)
  approvedScope  String           @map("approved_scope") @db.VarChar(255)
  emailAddress   String           @map("email_address") @db.VarChar(255)
  phoneNumber    String?          @map("phone_number") @db.VarChar(255)
  firstName      String?          @map("first_name") @db.VarChar(255)
  lastName       String?          @map("last_name") @db.VarChar(255)
  fullName       String?          @map("full_name") @db.VarChar(255)
  username       String?          @map("username") @db.VarChar(255)
  avatarUrl      String?          @map("avatar_url") @db.VarChar(500)
  createdAt      DateTime         @default(now()) @map("created_at") @db.Timestamptz
  updatedAt      DateTime         @updatedAt @map("updated_at") @db.Timestamptz

  userId String @map("user_id") @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("external_account")
}

model Bill {
  id            String        @id @default(uuid()) @db.Uuid
  createdAt     DateTime      @default(now()) @map("created_at") @db.Timestamptz
  updatedAt     DateTime      @updatedAt @map("updated_at") @db.Timestamptz
  transactionId String?       @map("transaction_id") @db.VarChar(255)
  paymentMethod PaymentMethod @map("payment_method")
  type          BillType
  status        BillStatus
  amount        Int           @db.Integer
  note          String        @db.Text

  order  Order?
  userId String? @map("user_id") @db.Uuid
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("bill")
}

model CartItem {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz
  quantity  Int      @default(1) @db.SmallInt

  productId String  @map("product_id") @db.Uuid
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId    String  @map("user_id") @db.Uuid
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([productId, userId], name: "productUserId")
  @@map("cart_item")
}

enum UserRole {
  ROOT
  ADMINISTRATOR
  SUPPORTER
  COLLABORATOR
  SELLER
  USER

  @@map("user_role")
}

enum UserFlag {
  BEST_CUSTOMER
  DIAMOND_CUSTOMER
  GOLD_CUSTOMER
  SILVER_CUSTOMER
  COPPER_CUSTOMER
  CUSTOMER

  @@map("user_flag")
}

enum UserVisibility {
  PUBLIC
  PRIVATE
  CONTACT_ONLY

  @@map("user_visibility")
}

enum ProviderPlatform {
  GOOGLE
  DISCORD

  @@map("provider_platform")
}

enum BillType {
  MONEY_OUT
  MONEY_IN

  @@map("bill_type")
}

enum BillStatus {
  DONE
  PENDING
  REFUNDED
  CANCELLED
  FAILED

  @@map("bill_status")
}

enum PaymentMethod {
  MOMO
  VIETQR_PAYOS

  @@map("payment_method")
}

enum SelectFrom {
  CART
  SERVICES

  @@map("select_from")
}

model Setting {
  userId String @id @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  emailNotifications   Boolean @default(true) @map("email_notifications")
  browserNotifications Boolean @default(false) @map("browser_notifications")

  ticketNotifications       Boolean @default(true) @map("ticket_notifications")
  suggestedProducts         Boolean @default(true) @map("suggested_products")
  promotionNotifications    Boolean @default(false) @map("promotion_notifications")
  priceChangesNotifications Boolean @default(false) @map("price_changes_notifications")
  loginNotifications        Boolean @default(false) @map("login_notifications")
  restockNotifications      Boolean @default(false) @map("restock_notifications")

  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz

  @@map("setting")
}

model Ticket {
  id             String          @id @default(uuid()) @db.Uuid
  numericalOrder Int             @default(autoincrement()) @map("numerical_order") @db.Integer
  createdAt      DateTime        @default(now()) @map("created_at") @db.Timestamptz
  updatedAt      DateTime        @updatedAt @map("updated_at") @db.Timestamptz
  title          String          @db.VarChar(255)
  description    String          @db.Text
  status         TicketStatus    @default(OPEN)
  category       TicketCategory
  priority       TicketPriority
  contexts       TicketContext[]
  attachments    String[]        @db.VarChar(500)

  authorId String          @map("author_id") @db.Uuid
  author   User            @relation(name: "TicketAuthor", fields: [authorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  assignId String?         @map("assign_id") @db.Uuid
  assign   User?           @relation(name: "TicketAssign", fields: [assignId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  messages TicketMessage[]
  members  TicketMember[]

  @@map("ticket")
}

model TicketMember {
  id         String    @id @default(uuid()) @db.Uuid
  lastReadAt DateTime?

  ticketId           String          @db.Uuid
  ticket             Ticket          @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  userId             String          @db.Uuid
  user               User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  lastReadMessageId  String?         @unique @db.Uuid
  lastReadMessage    TicketMessage?  @relation(fields: [lastReadMessageId], references: [id])
  ticketMessagesSent TicketMessage[] @relation("TicketMessageSender")

  @@unique([ticketId, userId], name: "ticketUserId", map: "ticket_user_id")
  @@map("ticket_member")
}

model TicketMessage {
  id          String   @id @default(uuid()) @db.Uuid
  content     String?  @db.Text
  isRead      Boolean  @default(false) @map("is_read")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt   DateTime @updatedAt @map("updated_at") @db.Timestamptz
  attachments String[]

  ticketUser TicketMember?
  ticketId   String        @map("ticket_id") @db.Uuid
  ticket     Ticket        @relation(fields: [ticketId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  senderId   String        @map("sender_id") @db.Uuid
  sender     TicketMember  @relation("TicketMessageSender", fields: [senderId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("ticket_message")
}

model TicketContext {
  id      String            @id @default(uuid()) @db.Uuid
  type    TicketContextType
  labelId String
  label   String

  ticketId String @db.Uuid
  ticket   Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("ticket_context")
}

enum TicketStatus {
  RESOLVED
  IN_PROGRESS
  WAITING
  OPEN
  CLOSED

  @@map("ticket_status")
}

enum TicketCategory {
  TECHNICAL_SUPPORT
  BILLING_PAYMENT
  ACCOUNT_ISSUE
  SERVICE_REQUEST
  REFUND_REQUEST
  GENERAL_INQUIRY

  @@map("ticket_category")
}

enum TicketPriority {
  URGENT
  HIGH
  MEDIUM
  LOW

  @@map("ticket_priority")
}

enum TicketContextType {
  ORDER
  PRODUCT
  TRANSACTION
  ACCOUNT

  @@map("ticket_context_type")
}
